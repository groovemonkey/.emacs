(require 'package)
(let* ((no-ssl (and (memq system-type '(windows-nt ms-dos))
                    (not (gnutls-available-p))))
       (proto (if no-ssl "http" "https")))
  (when no-ssl (warn "Your version of Emacs does not support SSL connections."))
  (add-to-list 'package-archives (cons "melpa" (concat proto "://melpa.org/packages/")) t))
(package-initialize)

;; Auto-install packages so I can share this init.el around between machines easily
;; From https://stackoverflow.com/questions/10092322/how-to-automatically-install-emacs-packages-by-specifying-a-list-of-package-name
(setq package-list '(expand-region multiple-cursors auto-package-update monokai-theme evil projectile use-package treemacs treemacs-evil treemacs-projectile treemacs-icons-dired treemacs-magit)) 
; fetch the list of packages available
(unless package-archive-contents
  (package-refresh-contents))
; install the missing packages
(dolist (package package-list)
  (unless (package-installed-p package)
    (package-install package)))


;; Fix some kind of mac os keyboard issue?
(set-keyboard-coding-system nil)

;; Add to emacs shell $PATH
(add-to-list 'exec-path "/usr/local/bin")

;; Use line numbers everywhere
(global-linum-mode t)

;; expand more and more of a region
;; If you expand too far, you can contract the region by pressing - (minus key), or by prefixing the shortcut you defined with a negative argument: C-- C-=.
(require 'expand-region)
(global-set-key (kbd "C-=") 'er/expand-region)

;; ido mode
(require 'ido)
(setq ido-enable-flex-matching t)
(setq ido-everywhere t)
(ido-mode 1)

;; font size
(set-face-attribute 'default nil :height 120)

;; multiple cursors
;; TODO learn to use this
(require 'multiple-cursors)

;; vim mode
(require 'evil)
(evil-mode 1)

(projectile-mode +1)

;; auto-update my packages
(auto-package-update-maybe)

(use-package treemacs
